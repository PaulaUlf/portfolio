<%= form_for(group) do |f| %>
  <% if group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :year_start %>
    <%= f.number_field :year_start, id: :group_year_start %>
  </div>

  <div class="field">
    <%= f.label :year_end %>
    <%= f.number_field :year_end, id: :group_year_end %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, id: :group_name, in: 1..4 %>
  </div>

  <div class="field">
    <%= f.label :level_quantity %>
    <%= f.number_field :level_quantity, id: :group_level_quantity %>
  </div>

  <div class="field">
    <%= f.label :kind %>
    <%= f.text_field :kind, id: :group_kind %>
  </div>

  <!-- <div class="field">
    <%= f.label :cover %>
    <%= f.file_field :cover %>
  </div> -->

  <div class=”field”>
  	  <%= f.label :groupcover %>
  	  <%= f.file_field :groupcover, :multiple => true %>
    </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
